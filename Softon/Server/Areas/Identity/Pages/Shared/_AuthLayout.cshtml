@{
    Layout = "/Pages/Shared/_Layout.cshtml";
}
<div class="d-flex min-vh-100 body align-items-center justify-content-center">
    <div class="card border-0 rounded login-logout-card">
        <div class="card-header border-0">
            <ul class="nav nav-tabs border-0 card-header-tabs">
                <li class="nav-item">
                    <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">
                        Login
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">
                        Register
                    </a>
                </li>
            </ul>
        </div>
        <div class="card-body">
            <div class="row justify-content-center">
                <div class="col-10 my-4">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

</div>
@section Scripts{
    @await RenderSectionAsync("Scripts", required: false)

}
