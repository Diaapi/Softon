@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Areas/Identity/Pages/Shared/_AuthLayout.cshtml";
}

<form id="account" class="w-100" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
    <div class="form-floating mb-3 w-100">
        <input asp-for="Input.User" class="form-control text-white bg-dark" autocomplete="username" aria-required="true" placeholder="name@example.com" />
        <label asp-for="Input.User" class="form-label text-white">User Name</label>
        <span asp-validation-for="Input.User" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="Input.Password" class="form-control bg-dark text-white" autocomplete="current-password" aria-required="true" placeholder="password" />
        <label asp-for="Input.Password" class="form-label text-white text-white">Password</label>
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div class="d-flex justify-content-end my-1">
        <a id="forgot-password" class="text-white text-decoration-none" asp-page="./ForgotPassword">Forgot your password?</a>
    </div>
    <div class="checkbox mb-3">
        <label asp-for="Input.RememberMe" class="form-label">
            <input class="form-check-input bg-dark" style="outline:none" asp-for="Input.RememberMe" />
            <span class="text-white">@Html.DisplayNameFor(m => m.Input.RememberMe)</span>
        </label>
    </div>
    <div class="d-flex justify-content-center">
        <button id="login-submit" type="submit" class="btn btn-lg btn-light">Log in</button>
    </div>
    <!--<div class="d-flex justify-content-center mt-1">
        <a asp-page="./Register" class="btn btn-link text-decoration-none" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
    </div>-->
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

